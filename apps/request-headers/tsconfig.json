{
  "extends": "tsconfig/nextjs.json",
  "compilerOptions": {
    "target": "ES6",
    "plugins": [{ "name": "next" }],
    "strictNullChecks": true
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "next-env.d.ts"
  ],
  "paths": {
    "ui": ["../../packages/ui/src"]
  },
  "exclude": [
    "node_modules"
  ]
}
