{
  "extends": "@repo/typescript-config/base.json",
  "include": ["**/*.ts"],
  "exclude": ["node_modules"],
  "compilerOptions": {
    "target": "es5",
    "moduleResolution": "node",
    "module": "commonjs",
    "noEmit": false,
    "allowJs": true,
    "removeComments": false,
    "outDir": "dist",
    "allowImportingTsExtensions": false,
    "declaration": false,
    "declarationMap": false
  }
}
